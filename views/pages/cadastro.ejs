<%- contentFor( 'body') %>

<div class="jumbotron">
    <form action="/cadastro/create" method="post">
        <fieldset>
            <h4>Nome</h4>
            <input type="text" name="nome" id="nome">
        </fieldset>

        <div class="field-group">
            <fieldset>
                <h4>Email</h4>
                <input type="email" name="email" id="email">
            </fieldset>
            
            <fieldset>
                <h4>Endere√ßo</h4>
                <input type="text" name="endereco" id="endereco">
            </fieldset>
        </div>
        
        <div class="field-group">
            <fieldset>
                <h4>Idade</h4>
                <input type="number" name="idade" id="idade">
            </fieldset>
            
            <fieldset>
                <h4>Altura</h4>
                <input type="number" name="altura" id="altura">
            </fieldset>
        </div>
        
        <fieldset>
            <label for="voto_true">
                <input type="radio" name="voto_true" class="voto">
                True
            </label>

            <label for="voto_false">
                <input type="radio" name="voto_false" class="voto">
                False
            </label>
        </fieldset>

        <button type="submit">Fazer cadastro</button>
    </form>
</div>

